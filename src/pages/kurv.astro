---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Østerlandsk Tehus</title>
    <link rel="stylesheet" href="https://use.typekit.net/jxo6nhv.css" />
  </head>

  <body>
    <Header />

    <main class="main">
         <div class="brodkrumme">
        <a href="">Hjem</a><img src="/img/ikoner_logo/pil_hojre.svg" alt="" /><p
        >
          Kurv
        </p>
      </div>
      <a href=""></a>
      <h1>Kurv</h1>
      <section>
        <div class="testimonials">
          <div class="kreditkort body1b"><img src="public/img/ikoner_logo/kreditkort.svg" alt="kreditkort" /><p>Gratis fragt fra 400kr</p></div>
          <div class="transport body1b"><img src="public/img/ikoner_logo/transport.svg" alt="transport" /><p>Levering 1-3 dage</p></div>
        </div>
        <div class="titler">
          <!-- vises kun i desk -->
          <h4>Produktnavn</h4>
          <h4>Pris</h4>
          <h4>Mængde</h4>
          <h4>Titel</h4>
          <h4>Fjern produkt</h4>
        </div>
        <div>
          <div class="billede_lakrids"><img src="public/img/billeder/lakrids_lille_billede.svg" alt="lakrids" /></div>
          <div>
            <div>
              <p class="body1">Lakrids Te</p><p class="body1">Størrelse: 100g</p>
              <p class="body1i">Fjern</p><div>
                <img src="public/img/ikoner_logo/plus.svg" alt="plus" /><p>1</p><img src="public/img/ikoner_logo/minus.svg" alt="minus" />
              </div>
              <p></p>
            </div>
          </div>
        </div>
        <div>
          <div><div><h4></h4><h5></h5></div><div><h4></h4><h5></h5></div></div>
          <div><div><p></p><h4></h4></div><p></p></div>
        </div>
        <div><div><a href=""></a></div><div><a href=""></a></div></div>
      </section>
    </main>

    <Footer />

    <style>



      h1 {
      margin-top: 36px;
      grid-column: 2/3;
      margin-bottom: 72px;
      text-align: center;
    }

    .brodkrumme {
      display: flex;
      align-items: center;
      padding-left: 36px;
      padding-right: 36px;
    }
    .brodkrumme img {
      height: 16px;
    }

    .brodkrumme a {
      font-family: "EB Garamond", serif;
      font-size: var(--font-size-web-body1-label);
      color: var(--color-oliven);
      line-height: var(--line-height-web-body1);
      font-weight: var(--font-weight-body-bold);
    }

   

    .kreditkort{
      display: flex;
      flex-direction: row;
      align-items: center;
      gap: 6px;
    }

     .transport{
      display: flex;
      flex-direction: row;
      align-items: center;
      gap: 6px;
    }

    .titler{
      display: none;
    }

      /* desktop */
      @media (min-width: 600px) {
         .brodkrumme {
        grid-column: 2/3;
      }

    .testimonials{
display: flex;
flex-direction: row;
  }


   .titler{
      display: block;
    }

      }
    </style>
  </body>
</html>
